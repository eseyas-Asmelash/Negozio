@model Negozio.Core.ViewModels.ProdottiAmministrazione

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Prodotti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prodotti.Name" class="control-label"></label>
                <input asp-for="Prodotti.Name" class="form-control" />
                <span asp-validation-for="Prodotti.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotti.Description" class="control-label"></label>
                <input asp-for="Prodotti.Description" class="form-control" />
                <span asp-validation-for="Prodotti.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotti.Price" class="control-label"></label>
                <input asp-for="Prodotti.Price" class="form-control" />
                <span asp-validation-for="Prodotti.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Prodotti.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Prodotti.Category,
                    new SelectList(Model.CategoriaProdotti, "Category", "Category"),
                    new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Prodotti.Image" class="control-label"></label>
                <input type="file" asp-for="Prodotti.Image" class="form-control" />
                <span asp-validation-for="Prodotti.Image" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Prodotti.Id" />
            <input type="hidden" asp-for="Prodotti.CreatedAt" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
